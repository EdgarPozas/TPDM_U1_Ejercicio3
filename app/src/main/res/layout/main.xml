<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_margin="10dp"
	android:orientation="vertical">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Su nombre"
		android:textSize="20dp"/>

	<EditText
		android:layout_width="match_parent"
		android:ems="10"
		android:layout_height="wrap_content"
		android:id="@+id/nombre"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Nivel escolar"
		android:textSize="20dp"/>

	<RadioGroup
		android:id="@+id/radio"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<RadioButton
			android:checked="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Nivel básico (primaria/secundaria)"
			android:id="@+id/r1"/>

		<RadioButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Nivel superior (preparatoria)"
			android:id="@+id/r2"/>

		<RadioButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Técnico/Profesión"
			android:id="@+id/r3"/>

		<RadioButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Superior (Licenciatura/Ing)"
			android:id="@+id/r4"/>

		<RadioButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Maestría"
			android:id="@+id/r5"/>

		<RadioButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Doctorado"
			android:id="@+id/r6"/>

	</RadioGroup>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Sueldo actual mensual"
		android:textSize="20dp"/>

	<EditText
		android:layout_width="match_parent"
		android:inputType="numberDecimal"
		android:layout_height="wrap_content"
		android:ems="10"
		android:id="@+id/sueldo"/>

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Cálculo monto a prestar"
		android:onClick="calcular"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text=""
		android:textSize="20dp"
		android:gravity="center"
		android:id="@+id/txtsueldo"/>

</LinearLayout>

